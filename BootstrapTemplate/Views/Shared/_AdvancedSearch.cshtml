</div>





@section scripts{

    <script>

        $(document).ready(function () {
            $('#submit').click(function () {
                var conceptName = $('#selectpicker').find(":selected").text();
                console.log(conceptName);
            });
        });

        $('#Search').click(function () {
            var conceptName = $('#selectpicker').find(":selected").text();
            console.log(conceptName);

            $.ajax({
                url: "/Result/GetData",
                type: 'GET',
                data: { valuetoset: conceptName },
                success: function (result) {
                    alert(result);
                },
                error: function () {
                    alert("error");
                }
            });
        });
    </script>

}